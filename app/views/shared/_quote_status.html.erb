<% if !quote.transaction %>
	<%= render 'quotes/needs_inspection_status', quote: quote %>
<% else %>
	<% if quote.transaction.status == "Inspected" %>
		<%= render 'quotes/inspected_status', transaction: quote.transaction %>
	<% elsif quote.transaction.status == "Accepted" %>
		<%= render 'quotes/accepted_status', transaction: quote.transaction %>
	<% elsif quote.transaction.status == "Declined" %>
		<%= render 'quotes/declined_status', transaction: quote.transaction %>
	<% end %>
<% end %>
